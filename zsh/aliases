# docker aliases
alias d='docker'
alias drm='docker rm $(docker ps -a -q)'
alias drmi='docker images | grep -v "IMAGE ID" | awk "{print $3}" | xargs -L1 docker rmi'
alias dup='docker images | grep -v REPOSITORY | awk "{print $1}" | xargs -L1 docker pull'
alias ubuntu='docker run -it --rm -v `pwd`:/data aoeldemann/ubuntu /bin/bash'

# vagrant
alias v='vagrant'

# time aliases
alias now='date +%y%m%d%H%M'
alias day='date +%y%m%d'

alias ll='ls -alh'
alias tmux='tmux -2'
alias gs='gst'
