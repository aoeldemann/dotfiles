[general]
ui = ttyui
accounts = aoel
readonly = True
maxsyncaccounts = 1

[Account aoel]
localrepository = aoel-local
remoterepository = aoel-remote
readonly = True

[Repository aoel-local]
type = Maildir
localfolders = ~/mail/aoel

[Repository aoel-remote]
type = IMAP
remotehost = <server>
remoteuser = <user>
createfolders = False
realdelete = no
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda folder: re.sub('^INBOX\.', '', folder)
maxconnections = 1
holdconnectionopen = yes
